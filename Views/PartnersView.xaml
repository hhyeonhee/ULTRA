<UserControl x:Class="ULTRA.Views.PartnersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1200"
             d:DesignHeight="760">

    <!-- ============= Styles ============= -->
    <UserControl.Resources>
        <!-- 좌측 리스트 공통 -->
        <Style x:Key="ListGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E2E8F0"/>
            <Setter Property="VerticalGridLinesBrush"   Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- 아이콘+텍스트 버튼 -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin"  Value="0,0,8,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="#CBD5E0" BorderThickness="1"
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#60A5FA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 우측 상세 정보 패널의 라벨 스타일 -->
        <Style x:Key="DetailLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <!-- 우측 상세 정보 패널의 입력창 스타일 -->
        <Style x:Key="DetailTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </UserControl.Resources>

    <!-- ============= Layout ============= -->
    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="520"/>
            <ColumnDefinition Width="14"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 상단 검색 -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#F8FAFC" CornerRadius="6" BorderBrush="#E2E8F0" BorderThickness="1" Padding="10" Margin="0,0,0,8">
            <DockPanel LastChildFill="False">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="검색" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Width="360" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Style="{StaticResource IconButton}" Margin="8,0,0,0" Command="{Binding SearchCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://application:,,,/Assets/search.png" Width="14" Height="14" Margin="0,0,6,0"/>
                            <TextBlock Text="검색"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 좌측: 리스트 -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DataGrid Grid.Row="1" Style="{StaticResource ListGrid}"
                      ItemsSource="{Binding PartnersView}"
                      SelectedItem="{Binding SelectedPartner, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="코드"     Binding="{Binding 코드}"     Width="90"/>
                    <DataGridTextColumn Header="거래처명" Binding="{Binding 거래처명}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- 우측: 상세 -->
        <Border Grid.Row="1" Grid.Column="2" BorderBrush="#E2E8F0" BorderThickness="1" CornerRadius="6" Padding="14">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="파트너 정보" FontWeight="Bold" FontSize="16" Margin="0,0,0,12"/>

                    <UniformGrid Columns="2" Margin="0,4">
                        <TextBlock Style="{StaticResource DetailLabel}" Text="코드"/>
                        <TextBox Style="{StaticResource DetailTextBox}" 
                                 Text="{Binding EditPartner.코드, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"/>
                    </UniformGrid>

                    <UniformGrid Columns="2" Margin="0,4">
                        <TextBlock Style="{StaticResource DetailLabel}" Text="거래처명"/>
                        <TextBox Style="{StaticResource DetailTextBox}" 
                                 Text="{Binding EditPartner.거래처명, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"/>
                    </UniformGrid>

                    <UniformGrid Columns="2" Margin="0,4">
                        <TextBlock Style="{StaticResource DetailLabel}" Text="연락처"/>
                        <TextBox Style="{StaticResource DetailTextBox}" 
                                 Text="{Binding EditPartner.연락처, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"/>
                    </UniformGrid>

                    <UniformGrid Columns="2" Margin="0,4">
                        <TextBlock Style="{StaticResource DetailLabel}" Text="담당자"/>
                        <TextBox Style="{StaticResource DetailTextBox}" 
                                 Text="{Binding EditPartner.담당자, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"/>
                    </UniformGrid>

                    <UniformGrid Columns="2" Margin="0,4">
                        <TextBlock Style="{StaticResource DetailLabel}" Text="주소"/>
                        <TextBox Style="{StaticResource DetailTextBox}" 
                                 Text="{Binding EditPartner.주소, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"/>
                    </UniformGrid>

                    <TextBlock Style="{StaticResource DetailLabel}" Text="메모" Margin="0,12,0,4"/>
                    <TextBox Style="{StaticResource DetailTextBox}" 
                             Text="{Binding EditPartner.메모, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="{Binding IsReadOnly}"
                             MinHeight="120" Height="Auto" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 하단 버튼 -->
        <DockPanel Grid.Row="2" Grid.ColumnSpan="3" LastChildFill="False" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Style="{StaticResource IconButton}" Command="{Binding AddCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/add.png" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="업체등록"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource IconButton}" Command="{Binding EditCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/edit.png" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="정보수정"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource IconButton}" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/delete.png" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="업체삭제"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource IconButton}" Command="{Binding OpenMovementsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/more.png" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="거래내역 보기"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                <Button Style="{StaticResource IconButton}" Command="{Binding CancelCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/cancel.png" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="취소"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource IconButton}" Command="{Binding SaveCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Assets/save.png" Width="14" Height="14" Margin="0,0,6,0"/>
                        <TextBlock Text="저장"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>