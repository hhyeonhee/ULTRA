<Application x:Class="ULTRA.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ULTRA.ViewModels"
             xmlns:v="clr-namespace:ULTRA.Views">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="CellRightAlignStyle" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="TextAlignment" Value="Right"/>
            </Style>


            <!-- 정확히 이 이름들로 Views/*.xaml 의 x:Class 가 있어야 함 -->
            <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                <v:DashboardView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ProductsViewModel}">
                <v:ProductsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:WarehouseViewModel}">
                <v:WarehouseView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MovementsViewModel}">
                <v:MovementsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PosEstimateViewModel}">
                <v:PosEstimateView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:PartnersViewModel}">
                <v:PartnersView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:ReceiptsInvoicesViewModel}">
                <v:ReceiptsInvoicesView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
                <v:SettingsView/>
               
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:LogsViewModel}">
                <v:LogsView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type vm:MovementsDetailViewModel}">
                <v:MovementsDetailView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
