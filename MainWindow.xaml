<Window x:Class="ULTRA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="ULTRA" Width="1280" Height="800"
        FontFamily="Noto Sans KR" Background="White">

    <!-- ===================== Window-level Resources ===================== -->
    <Window.Resources>
        <!-- Theme -->
        <SolidColorBrush x:Key="NavBtnBg"        Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="NavBtnFg"        Color="#2D3748"/>
        <SolidColorBrush x:Key="NavBtnBorder"    Color="#CBD5E0"/>
        <SolidColorBrush x:Key="NavBtnHoverBg"   Color="#E2E8F0"/>
        <SolidColorBrush x:Key="NavBtnPressedBg" Color="#CBD5E0"/>
        <SolidColorBrush x:Key="NavPaneBg"       Color="#F5F6FA"/>

        <!-- NOTE: 디자이너 호환을 위해 sys:Double 사용 -->
        <sys:Double x:Key="NavBtnHeight">36</sys:Double>
        <sys:Double x:Key="NavBtnMinWidth">180</sys:Double>
        <CornerRadius x:Key="NavBtnCorner">8</CornerRadius>

        <!-- 사이드바 폭 -->
        <sys:Double x:Key="NavExpandedWidth">220</sys:Double>
        <sys:Double x:Key="NavCollapsedWidth">56</sys:Double>

        <!-- 버튼 스타일 -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Height"                  Value="{StaticResource NavBtnHeight}"/>
            <Setter Property="MinWidth"                Value="{StaticResource NavBtnMinWidth}"/>
            <Setter Property="Background"              Value="{StaticResource NavBtnBg}"/>
            <Setter Property="Foreground"              Value="{StaticResource NavBtnFg}"/>
            <Setter Property="BorderBrush"             Value="{StaticResource NavBtnBorder}"/>
            <Setter Property="BorderThickness"         Value="1"/>
            <Setter Property="FontWeight"              Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="{StaticResource NavBtnCorner}">
                            <ContentPresenter Margin="12,6"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource NavBtnHoverBg}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="{StaticResource NavBtnPressedBg}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ============================== Layout ============================== -->
    <DockPanel>

        <!-- Left Navigation Pane -->
        <Border x:Name="Sidebar"
            DockPanel.Dock="Left"
            Width="{StaticResource NavExpandedWidth}"
            Background="{StaticResource NavPaneBg}"
            Padding="12">

            <!-- 이 Border 내부 모든 Button에 NavButton 스타일 자동 적용 -->
            <Border.Resources>
                <Style TargetType="Button" BasedOn="{StaticResource NavButton}"/>
            </Border.Resources>

            <!-- ★ Border.Triggers 대신 Border.Style.Triggers 사용 (DataTrigger 허용) -->
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <!-- NavToggle.IsChecked = True → 접힘 -->
                        <DataTrigger Binding="{Binding IsChecked, ElementName=NavToggle}" Value="True">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                     To="{StaticResource NavCollapsedWidth}"
                                     Duration="0:0:0.20" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <!-- 풀어질 때 -->
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                     To="{StaticResource NavExpandedWidth}"
                                     Duration="0:0:0.20" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel>
                <!-- 상단: 햄버거 토글 + 중앙 타이틀(로고 제거) -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- 토글 -->
                        <ColumnDefinition Width="*"/>
                        <!-- 중앙 텍스트 -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- 더미(토글 폭) -->
                    </Grid.ColumnDefinitions>

                    <!-- 사이드바 열고/닫기 Toggle -->
                    <ToggleButton x:Name="NavToggle"
                        Grid.Column="0"
                        Width="32" Height="32"
                        Margin="0,0,8,0"
                        ToolTip="메뉴 접기/펼치기"
                        Content="☰"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        FontSize="16"/>

                    <!-- 텍스트: 자신의 Style에서 애니메이션 (NameScope 문제 회피) -->
                    <TextBlock x:Name="TitleText"
                     Grid.Column="1" Text="ULTRA"
                     FontSize="22" FontWeight="Bold"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked, ElementName=NavToggle}" Value="True">
                                        <DataTrigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           To="0" Duration="0:0:0.15"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.EnterActions>
                                        <DataTrigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           To="1" Duration="0:0:0.15"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </DataTrigger.ExitActions>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- 오른쪽 더미: 토글 버튼 폭과 동일(정중앙 유지용) -->
                    <Border Grid.Column="2" Width="32" Background="Transparent"/>
                </Grid>

                <!-- 메뉴 버튼들 -->
                <Button Content="대시보드"          Command="{Binding GoDashboard}"        Margin="0,4,0,0"/>
                <Button Content="제품관리"          Command="{Binding GoProducts}"         Margin="0,4,0,0"/>
                <Button Content="창고현황"          Command="{Binding GoWarehouse}"       Margin="0,4,0,0"/>
                <Button Content="입출고내역"        Command="{Binding GoMovements}"       Margin="0,4,0,0"/>
                <Separator Margin="0,8"/>
                <Button Content="판매/견적"         Command="{Binding GoPosEstimate}"     Margin="0,4,0,0"/>
                <Button Content="거래처정보"        Command="{Binding GoPartners}"        Margin="0,4,0,0"/>
                <Button Content="영수증/세금계산서" Command="{Binding GoReceiptsInvoices}" Margin="0,4,0,0"/>
                <Separator Margin="0,8"/>
                <Button Content="설정"              Command="{Binding GoSettings}"        Margin="0,4,0,0"/>
                <Button Content="로그/이력"         Command="{Binding GoLogs}"            Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- Right Content Area -->
        <ContentControl Content="{Binding Nav.CurrentViewModel}" Margin="16"/>
    </DockPanel>
</Window>
