<UserControl x:Class="ULTRA.Views.ProductsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Background="White"
             d:DesignWidth="1200" d:DesignHeight="720">

    <UserControl.Resources>

        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="Lbl" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,6,8,6"/>
            <Setter Property="Foreground" Value="#334155"/>
        </Style>

        <Style x:Key="EditText" TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,16,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="IsReadOnly" Value="False"/>
                    <Setter Property="Background" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditCombo" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,4,16,4"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="IsEnabled" Value="True"/>
                    <Setter Property="IsReadOnly" Value="False"/>
                    <Setter Property="Background" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TinyBtn" TargetType="Button">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#F8FAFC"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ListGrid" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="RowHeight" Value="34"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E2E8F0"/>
            <Setter Property="VerticalGridLinesBrush"   Value="#E2E8F0"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SelectionMode" Value="Single"/>
        </Style>

    </UserControl.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="750"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="3" Padding="10"
                Background="#F8FAFC" BorderBrush="#E2E8F0" BorderThickness="1">
            <DockPanel LastChildFill="True">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Left">
                    <TextBlock Text="정렬" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <ComboBox Width="140" ItemsSource="{Binding SortOptions}"
                              SelectedItem="{Binding SelectedSortOption}"/>

                    <TextBlock Text="대분류" Margin="20,0,8,0" VerticalAlignment="Center"/>
                    <ComboBox Width="140" ItemsSource="{Binding MajorNames}" SelectedItem="{Binding MajorFilter}"/>

                    <TextBlock Text="중분류" Margin="12,0,8,0" VerticalAlignment="Center"/>
                    <ComboBox Width="140" ItemsSource="{Binding MiddleNames}" SelectedItem="{Binding MiddleFilter}"/>

                    <TextBlock Text="검색" Margin="20,0,8,0" VerticalAlignment="Center"/>
                    <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <Button Style="{StaticResource TinyBtn}" Command="{Binding AddCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="14" Source="pack://application:,,,/Assets/add.png" Margin="0,0,6,0"/>
                            <TextBlock Text="추가"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TinyBtn}" Command="{Binding EditCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="14" Source="pack://application:,,,/Assets/edit.png" Margin="0,0,6,0"/>
                            <TextBlock Text="수정"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TinyBtn}" Command="{Binding DeleteCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="14" Source="pack://application:,,,/Assets/delete.png" Margin="0,0,6,0"/>
                            <TextBlock Text="삭제"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TinyBtn}" Command="{Binding CancelCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="14" Source="pack://application:,,,/Assets/cancel.png" Margin="0,0,6,0"/>
                            <TextBlock Text="취소"/>
                        </StackPanel>
                    </Button>
                    <Button Style="{StaticResource TinyBtn}" Command="{Binding SaveCommand}">
                        <StackPanel Orientation="Horizontal">
                            <Image Width="14" Height="14" Source="pack://application:,,,/Assets/save.png" Margin="0,0,6,0"/>
                            <TextBlock Text="저장"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <DataGrid Grid.Row="1" Grid.Column="0" Style="{StaticResource ListGrid}"
                  ItemsSource="{Binding ItemsView}" SelectedItem="{Binding Selected}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="번호"  Binding="{Binding 번호}" Width="80"/>
                <DataGridTextColumn Header="품명"  Binding="{Binding 품명}" Width="*"/>
                <DataGridTextColumn Header="제조사" Binding="{Binding 제조사}" Width="100"/>
                <DataGridTextColumn Header="대분류" Binding="{Binding 대분류}" Width="100"/>
                <DataGridTextColumn Header="중분류" Binding="{Binding 중분류}" Width="100"/>
                <DataGridTextColumn Header="도매가" Binding="{Binding 도매가표시}" Width="100"/>
                <DataGridTextColumn Header="소매가" Binding="{Binding 소매가표시}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <ScrollViewer Grid.Row="1" Grid.Column="2" Margin="16,4,16,56" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="번호"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.번호, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="품명"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.품명, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="제조사"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding Manufacturers}"
                                  Text="{Binding EditModel.제조사, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="제조사코드"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.제조사코드, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="공급업체명"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding Suppliers}"
                                  Text="{Binding EditModel.공급업체명, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="공급업체코드"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.공급업체코드, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="공급업체번호"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.공급업체번호, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="원산지"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding Origins}"
                                  Text="{Binding EditModel.원산지, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="인증"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding Certs}"
                                  Text="{Binding EditModel.인증, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="인증번호"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.인증번호, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="3" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="도매가(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.도매가, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="소매가(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.소매가, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="차익금(원)"/>
                        <TextBox Style="{StaticResource EditText}" IsReadOnly="True"
                                 Text="{Binding EditModel.차익금, Mode=OneWay}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="3" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="대분류"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding MajorEditChoices}"
                                  Text="{Binding EditModel.대분류, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="중분류"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding MiddleEditChoices}"
                                  Text="{Binding EditModel.중분류, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="소분류"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.소분류, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="3" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="대분류코드"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.대분류코드, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="중분류코드"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.중분류코드, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="소분류코드"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.소분류코드, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="속성"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.속성, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="속성코드"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.속성코드, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="기본옵션"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.기본옵션, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="옵션갯수(개)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션갯수, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="옵션1"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="옵션1가격(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션1가격, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="옵션2"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="옵션2가격(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션2가격, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="옵션3"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션3, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="옵션3가격(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션3가격, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="옵션4"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션4, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="옵션4가격(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션4가격, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,16">
                    <StackPanel>
                        <TextBlock Text="옵션5"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션5, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="옵션5가격(원)"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.옵션5가격, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="보증기간"/>
                        <ComboBox Style="{StaticResource EditCombo}" IsEditable="True"
                                  ItemsSource="{Binding Warranties}"
                                  Text="{Binding EditModel.보증기간, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,0,4">
                        <CheckBox Content="단종여부" VerticalAlignment="Center"
                                  IsChecked="{Binding EditModel.단종여부, Mode=TwoWay}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="이미지1첨부"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.이미지1첨부, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="이미지2첨부"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.이미지2첨부, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </UniformGrid>

                <UniformGrid Columns="2" Rows="1" Margin="0,8,0,20">
                    <StackPanel>
                        <TextBlock Text="이미지3첨부"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.이미지3첨부, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="특이사항"/>
                        <TextBox Style="{StaticResource EditText}"
                                 Text="{Binding EditModel.특이사항, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 />
                    </StackPanel>
                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>